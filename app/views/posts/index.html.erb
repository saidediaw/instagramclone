<div class="container">
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td><%= post.user.name %></td>
        <td><%= image_tag post.image.url, style:"width:150px"%></td>
        <td><%= post.content %></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Show', post %></button></td>
        <% if session[:user_id] == post.user.id %>
        <td><button type="button" class="btn btn-warning" ><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <%else%>
        <td><button type="button" class="btn btn-warning hidden" ><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><button type="button" class="btn btn-danger hidden"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'New Post', new_post_path %></button> |
<button type="button" class="btn btn-info"><%= link_to 'Favorites', favorites_path %></button>
</div>
