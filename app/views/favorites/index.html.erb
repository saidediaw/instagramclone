<div class="container">
<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th>Poster</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.post.user.name %></td>
        <td><%= image_tag favorite.post.image.url, style:"width:150px"%></td>
        <td><%= favorite.post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to posts', posts_path %>
</div>
