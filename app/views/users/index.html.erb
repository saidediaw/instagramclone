<p id="notice"><%= notice %></p>

<h1>Users</h1>
<br>
<table class="container">
  <thead>
    <tr class="row">
      <th class="col-md-4">Profile picture</th>
      <th class="col-md-4">Name</th>
      <th class="col-md-4">Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="row">
        <td class="col-md-4"><%= image_tag user.image.url %></td>
        <td class="col-md-4"><%= user.name %></td>
        <td class="col-md-4"><%= user.email %></td>
        <td><button type="button" class="btn btn-info btn-sm"><%= link_to 'See', user %></button></td>

      <% if current_user && current_user.id == user.id %>
        <td><button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
<br>
<button type="button" class="btn btn-info"><%= link_to 'New User', new_user_path %></button>
